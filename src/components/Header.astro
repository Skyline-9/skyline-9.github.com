---
const navLinks = [
  { href: "#about", label: "About" },
  { href: "#experience", label: "Experience" },
  { href: "#projects", label: "Projects" },
];
---

<header id="header">
  <nav>
    <a href="#" class="logo">
      <img src="/logo.svg" alt="Richard Luo logo" width="32" height="32" />
    </a>
    <ul>
      {navLinks.map((link) => (
        <li>
          <a href={link.href}>{link.label}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script>
  const header = document.getElementById("header");
  const navLinks = document.querySelectorAll("#header nav ul li a");
  const heroHeight = window.innerHeight * 0.6;
  const sections = ["about", "experience", "projects"];

  function updateHeader() {
    if (window.scrollY > heroHeight) {
      header?.classList.add("visible");
    } else {
      header?.classList.remove("visible");
    }
  }

  function updateActiveNav() {
    const scrollPosition = window.scrollY + window.innerHeight / 3;
    let currentSection = "";

    for (const sectionId of sections) {
      const element = document.getElementById(sectionId);
      if (element) {
        const rect = element.getBoundingClientRect();
        const offsetTop = rect.top + window.scrollY;
        if (scrollPosition >= offsetTop) {
          currentSection = sectionId;
        }
      }
    }

    navLinks.forEach((link) => {
      const href = link.getAttribute("href");
      if (href === `#${currentSection}`) {
        link.classList.add("active");
      } else {
        link.classList.remove("active");
      }
    });
  }

  window.addEventListener("scroll", () => {
    updateHeader();
    updateActiveNav();
  }, { passive: true });
  
  updateHeader();
  updateActiveNav();
</script>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 0.75rem 2rem;
    background: var(--ctp-mocha-mantle);
    border-bottom: 1px solid transparent;
    transform: translateY(-100%);
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  header.visible {
    transform: translateY(0);
    border-bottom-color: var(--ctp-mocha-surface2);
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  header.visible nav {
    opacity: 1;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .logo img {
    height: 32px;
    width: auto;
  }

  .logo:hover {
    opacity: 0.8;
  }

  ul {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li a {
    color: var(--ctp-mocha-subtext1);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
    position: relative;
  }

  li a::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--ctp-mocha-sapphire);
    transition: width 0.2s ease;
  }

  li a:hover {
    color: var(--ctp-mocha-text);
  }

  li a:hover::after {
    width: 100%;
  }

  li a.active {
    color: var(--ctp-mocha-peach);
  }

  li a.active::after {
    width: 100%;
    background: var(--ctp-mocha-peach);
  }

  @media (max-width: 640px) {
    header {
      padding: 0.75rem 1rem;
    }

    ul {
      gap: 1rem;
    }

    li a {
      font-size: 0.8rem;
    }
  }
</style>
