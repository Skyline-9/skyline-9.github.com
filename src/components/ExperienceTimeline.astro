---
import { Briefcase } from "@phosphor-icons/react";
import { experiences } from "../data/experience";
---

<div id="experience" class="experience-timeline">
  <h2
    class="section-title section-title--glitch"
    style="--section-icon-color: var(--ctp-mocha-peach);"
    data-animate="fade-up"
  >
    <Briefcase className="section-icon" weight="duotone" />
    <span>Work Experience</span>
  </h2>
  <div class="timeline">
    {experiences.map((item, index) => {
      const animateDelay = Math.min(index * 100, 400);
      const isRight = index % 2 === 0;
      const rowClass = isRight ? "timeline-row--right" : "timeline-row--left";
      const animateDirection = isRight ? "fade-right" : "fade-left";

      const isActive = item.date.includes("Present");

      return (
        <div class={`timeline-row ${rowClass} ${isActive ? "timeline-row--active" : ""}`}>
          <div class="timeline-marker">
            <span class={`timeline-dot ${isActive ? "timeline-dot--active" : ""}`}></span>
          </div>
          <div
            class="cy-card timeline-content hover-lift"
            style="--cy-accent-1: var(--ctp-mocha-peach);"
            data-mouse-glow
            data-animate={animateDirection}
            data-animate-delay={`${animateDelay}`}
          >
            <div class="card-header">
              <div class="card-logo">
                <img src={item.image} alt={item.altText} loading="lazy" />
              </div>
              <div class="card-meta">
                <h3 class="card-company">{item.company}</h3>
                <p class="card-role">{item.role}</p>
                <p class="card-team">{item.team}</p>
                <p class="card-date">{item.date}</p>
              </div>
            </div>
            {item.description && (
              <div class="card-body">
                <p class="card-description">{item.description}</p>
              </div>
            )}
          </div>
        </div>
      );
    })}
  </div>
</div>

<style>
  .experience-timeline {
    width: 95%;
    max-width: 1400px;
    margin: 0 auto;
  }

  .timeline {
    position: relative;
    margin: 0 auto;
  }

  /* Center line for alternating layout */
  .timeline::before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 2px;
    background: var(--ctp-mocha-surface1);
    transform: translateX(-50%);
  }

  .timeline-row {
    display: grid;
    grid-template-columns: 1fr 40px 1fr;
    gap: 1rem;
    margin-bottom: 2rem;
    position: relative;
  }

  .timeline-row:last-child {
    margin-bottom: 0;
  }

  .timeline-marker {
    grid-column: 2;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 1.25rem;
    z-index: 1;
  }

  .timeline-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--ctp-mocha-peach);
    box-shadow: 0 0 0 3px var(--ctp-mocha-base), 0 0 0 4px var(--ctp-mocha-surface1);
    flex-shrink: 0;
  }

  .timeline-dot--active {
    background: var(--ctp-mocha-green);
    box-shadow: 0 0 0 3px var(--ctp-mocha-base), 0 0 0 4px var(--ctp-mocha-surface1);
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { box-shadow: 0 0 0 3px var(--ctp-mocha-base), 0 0 0 5px rgba(166, 227, 161, 0.3); }
    50% { box-shadow: 0 0 0 3px var(--ctp-mocha-base), 0 0 0 7px rgba(166, 227, 161, 0.1); }
  }

  /* Right-side cards (even index) */
  .timeline-row--right .timeline-content {
    grid-column: 3;
  }

  /* Left-side cards (odd index) */
  .timeline-row--left .timeline-content {
    grid-column: 1;
  }

  .timeline-content {
    padding: 0;
    overflow: hidden;
  }

  .card-header {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    align-items: flex-start;
  }

  .card-logo {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    padding: 0.5rem;
  }

  .card-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .card-meta {
    flex: 1;
    min-width: 0;
  }

  .card-company {
    margin: 0 0 0.125rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--ctp-mocha-text);
  }

  .card-role {
    margin: 0 0 0.25rem 0;
    font-size: 0.95rem;
    color: var(--ctp-mocha-subtext0);
    font-weight: 500;
  }

  .card-team {
    margin: 0 0 0.25rem 0;
    font-size: 0.85rem;
    color: var(--ctp-mocha-overlay1);
  }

  .card-date {
    margin: 0;
    font-size: 0.8rem;
    color: var(--ctp-mocha-overlay0);
  }

  .card-body {
    padding: 0 1.25rem 1.25rem;
    border-top: 1px solid var(--ctp-mocha-surface0);
    margin-top: 0;
  }

  .card-description {
    margin: 1rem 0 0;
    font-size: 0.9rem;
    color: var(--ctp-mocha-subtext0);
    line-height: 1.6;
  }

  @media (max-width: 900px) {
    .experience-timeline {
      width: 95%;
      max-width: 600px;
    }

    .timeline::before {
      left: 16px;
      transform: none;
    }

    .timeline-row {
      display: flex;
      gap: 1.25rem;
    }

    .timeline-marker {
      flex-shrink: 0;
      width: 32px;
      padding-top: 1.25rem;
    }

    .timeline-row--right .timeline-content,
    .timeline-row--left .timeline-content {
      grid-column: unset;
    }

    .timeline-content {
      flex: 1;
    }
  }

  @media (max-width: 640px) {
    .card-header {
      padding: 1rem;
      flex-direction: column;
      gap: 0.75rem;
    }

    .card-logo {
      width: 48px;
      height: 48px;
    }

    .card-body {
      padding: 0 1rem 1rem;
    }
  }
</style>
